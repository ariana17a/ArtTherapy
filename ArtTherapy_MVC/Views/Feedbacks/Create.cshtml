@model ArtTherapy_MVC.Models.FeedbackViewModel

@{
    ViewBag.Title = "Adaugă feedback";
}

<h2>Adaugă feedback</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.UtilizatorId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.UtilizatorId, Model.Utilizatori, "-- alege utilizator --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UtilizatorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LucrareArtisticaId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.LucrareArtisticaId, Model.LucrariArtistice, "-- alege lucrarea --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LucrareArtisticaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Text, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-top:10px">
                <input type="submit" value="Salvează" class="btn btn-primary" />
                @Html.ActionLink("Înapoi la listă", "Index", null, new { @class = "btn btn-default", style = "margin-left:10px" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
